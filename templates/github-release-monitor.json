{
  "id": "github-release-monitor",
  "name": "GitHub Release Monitor",
  "description": "Monitor GitHub repositories for new releases and get instant notifications",
  "icon": "github",
  "category": "DevOps",
  "nodes": [
    {
      "type": "trigger_schedule",
      "position": { "x": 100, "y": 200 },
      "data": {
        "cron": "0 */6 * * *"
      }
    },
    {
      "type": "action_http",
      "position": { "x": 350, "y": 200 },
      "data": {
        "method": "GET",
        "url": "https://api.github.com/repos/microsoft/vscode/releases/latest"
      }
    },
    {
      "type": "action_notification",
      "position": { "x": 600, "y": 150 },
      "data": {
        "title": "New GitHub Release",
        "message": "{{output.name}} ({{output.tag_name}})"
      }
    },
    {
      "type": "action_log",
      "position": { "x": 600, "y": 250 },
      "data": {
        "message": "Release: {{output.tag_name}} - {{output.html_url}}"
      }
    }
  ],
  "connections": [
    {
      "sourceIndex": 0,
      "sourcePort": "out",
      "targetIndex": 1,
      "targetPort": "in"
    },
    {
      "sourceIndex": 1,
      "sourcePort": "out",
      "targetIndex": 2,
      "targetPort": "in"
    },
    {
      "sourceIndex": 1,
      "sourcePort": "out",
      "targetIndex": 3,
      "targetPort": "in"
    }
  ]
}
