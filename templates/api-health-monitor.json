{
  "id": "api-health-monitor",
  "name": "API Health Monitor",
  "description": "Monitor multiple API endpoints and get alerts when they're down",
  "icon": "üè•",
  "category": "DevOps",
  "nodes": [
    {
      "type": "trigger_schedule",
      "position": { "x": 100, "y": 200 },
      "data": {
        "cron": "*/5 * * * *"
      }
    },
    {
      "type": "action_http",
      "position": { "x": 350, "y": 100 },
      "data": {
        "method": "GET",
        "url": "https://api.example.com/health",
        "timeout": 5000
      }
    },
    {
      "type": "action_http",
      "position": { "x": 350, "y": 200 },
      "data": {
        "method": "GET",
        "url": "https://api2.example.com/status",
        "timeout": 5000
      }
    },
    {
      "type": "action_http",
      "position": { "x": 350, "y": 300 },
      "data": {
        "method": "GET",
        "url": "https://api3.example.com/ping",
        "timeout": 5000
      }
    },
    {
      "type": "action_condition",
      "position": { "x": 600, "y": 200 },
      "data": {
        "condition": "{{output.status}} !== 200"
      }
    },
    {
      "type": "action_notification",
      "position": { "x": 850, "y": 200 },
      "data": {
        "title": "‚ö†Ô∏è API Down Alert",
        "message": "API endpoint is not responding! Status: {{output.status}}"
      }
    },
    {
      "type": "action_file",
      "position": { "x": 850, "y": 300 },
      "data": {
        "operation": "append",
        "path": "C:\\Logs\\api-health.log",
        "content": "[{{timestamp}}] API Health Check Failed - Status: {{output.status}}\n"
      }
    }
  ],
  "connections": [
    {
      "sourceIndex": 0,
      "sourcePort": "out",
      "targetIndex": 1,
      "targetPort": "in"
    },
    {
      "sourceIndex": 0,
      "sourcePort": "out",
      "targetIndex": 2,
      "targetPort": "in"
    },
    {
      "sourceIndex": 0,
      "sourcePort": "out",
      "targetIndex": 3,
      "targetPort": "in"
    },
    {
      "sourceIndex": 1,
      "sourcePort": "out",
      "targetIndex": 4,
      "targetPort": "in"
    },
    {
      "sourceIndex": 2,
      "sourcePort": "out",
      "targetIndex": 4,
      "targetPort": "in"
    },
    {
      "sourceIndex": 3,
      "sourcePort": "out",
      "targetIndex": 4,
      "targetPort": "in"
    },
    {
      "sourceIndex": 4,
      "sourcePort": "true",
      "targetIndex": 5,
      "targetPort": "in"
    },
    {
      "sourceIndex": 4,
      "sourcePort": "true",
      "targetIndex": 6,
      "targetPort": "in"
    }
  ]
}
